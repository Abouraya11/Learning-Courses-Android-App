<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/badge_image"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_police_badge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Quick Learner"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#1f314a"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/badge_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Completed 1 Course"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toEndOf="@+id/badge_image"
        app:layout_constraintTop_toBottomOf="@+id/badge_title" />

</androidx.constraintlayout.widget.ConstraintLayout>